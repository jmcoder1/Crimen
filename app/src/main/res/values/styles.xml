<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for the splash screen - Crimen logo -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Style for the floating searchview -->
    <style name="SearchView">
        <item name="floatingSearch_backgroundColor">@color/colorPrimary</item>
        <item name="floatingSearch_viewSearchInputTextColor">@color/floating_searchview_txt_color</item>
        <item name="floatingSearch_viewSuggestionItemTextColor">@color/floating_searchview_txt_color</item>
        <item name="floatingSearch_hintTextColor">@color/floating_searchview_txt_color</item>
        <item name="floatingSearch_dividerColor">@color/floating_searchview_txt_color</item>
        <item name="floatingSearch_clearBtnColor">@color/floating_searchview_txt_color</item>
        <item name="floatingSearch_leftActionColor">@color/floating_searchview_txt_color</item>
        <item name="floatingSearch_menuItemIconColor">@color/floating_searchview_txt_color</item>
        <item name="floatingSearch_suggestionRightIconColor">@color/floating_searchview_txt_color</item>
        <item name="floatingSearch_actionMenuOverflowColor">@color/floating_searchview_txt_color</item>
    </style>
</resources>
